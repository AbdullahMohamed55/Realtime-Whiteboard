            //     }
            //
            //     if(!paths3Holder[client]) {
            //         paths3Holder[client] = new Array();
            //     }
            //     paths3Holder[client].push(histPath);
            //
            // }


            socket.to(socket.url).emit('undo', socket.id);
        }
    );

    socket.on('clear',
        function (data) {
            drawHist[socket.url] = [];
            socket.to(socket.url).emit('clear', data);
        }
    );

    //connect to database
    // var connection = mysql.createConnection({
    //
