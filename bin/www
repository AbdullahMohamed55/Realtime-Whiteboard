    //             console.log("Errroroororo");
    //         else
    //             console.log("connected to database");
    //
    //     }
    // );
    //
    // socket.on('signup',
    //     function (data) {
    //
    //         var status = "";
    //
    //         var query = connection.query('SELECT * FROM  users WHERE username = ' + connection.escape(data.username), function (err, result) {
    //
    //              if(result.length != 0) {
    //                 console.log("This username is already taken :/");
    //                 console.log(result);
